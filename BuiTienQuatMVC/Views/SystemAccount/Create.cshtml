@model BuiTienQuatMVC.Models.SystemAccount

@{
    ViewData["Title"] = "Tạo tài khoản mới";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="AccountEmail" class="form-label">Email</label>
        <input asp-for="AccountEmail" class="form-control" />
        <span asp-validation-for="AccountEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AccountName" class="form-label">Họ và Tên</label>
        <input asp-for="AccountName" class="form-control" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AccountPassword" class="form-label">Password</label>
        <input asp-for="AccountPassword" class="form-control" />
        <span asp-validation-for="AccountPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AccountRole" class="form-label">Quyền</label>
        <select asp-for="AccountRole" class="form-control">
            <option value="1">Admin</option>
            <option value="2">User</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Tạo tài khoản</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
