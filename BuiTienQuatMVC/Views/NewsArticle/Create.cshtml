@model BuiTienQuatMVC.Models.NewsArticle

@{
    ViewData["Title"] = "Create News Article";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>Create News Article</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="mb-3">
                    <label asp-for="NewsArticleId" class="form-label fw-bold"></label>
                    <input asp-for="NewsArticleId" class="form-control" />
                    <span asp-validation-for="NewsArticleId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NewsTitle" class="form-label fw-bold"></label>
                    <input asp-for="NewsTitle" class="form-control" />
                    <span asp-validation-for="NewsTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Headline" class="form-label fw-bold"></label>
                    <input asp-for="Headline" class="form-control" />
                    <span asp-validation-for="Headline" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewsContent" class="form-label fw-bold"></label>
                    <textarea asp-for="NewsContent" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="NewsContent" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewsSource" class="form-label fw-bold"></label>
                    <input asp-for="NewsSource" class="form-control" />
                    <span asp-validation-for="NewsSource" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="CategoryId">Danh mục</label>
                    <select id="CategoryId" name="CategoryId" class="form-control" required>
                        @foreach (var category in ViewBag.Categories as List<Category>)
                        {
                            <option value="@category.CategoryId">@category.CategoryName</option>
                        }
                    </select>
                </div>

              

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
