@model IEnumerable<NewsArticle>

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Manage News Articles</h2>

    <!-- Button to create a new article -->
    <div class="mb-3 text-right">
        <a href="@Url.Action("Create")" class="btn btn-success btn-lg">
            <i class="fas fa-plus-circle"></i> Create New Article
        </a>
    </div>

    <!-- News Articles Table -->
    <table class="table table-hover table-bordered table-striped text-center">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Headline</th>
                <th>Created Date</th>
                <th>News Content</th>
                <th>News Source</th>
                <th>Category</th>
                <th>News Status</th>
                <th>Created By</th>
                <th>Updated By</th>
                <th>Modified Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var news in Model)
            {
                <tr>
                    <td>@news.NewsTitle</td>
                    <td>@news.Headline</td>
                    <td>@news.CreatedDate?.ToString("dd/MM/yyyy")</td>
                    <td>@news.NewsContent</td>
                    <td>@news.NewsSource</td>
                    <td>@news.Category?.CategoryName</td>
                    <td>@news.NewsStatus</td>
                    <td>@news.CreatedBy?.AccountName</td>
                    <td>@news.UpdatedById</td>
                    <td>@news.ModifiedDate?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = news.NewsArticleId })" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@news.NewsArticleId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete?')">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
