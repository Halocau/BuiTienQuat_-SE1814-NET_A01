@model NewsArticle

<h2>Sửa bài viết</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="NewsArticleId" value="@Model.NewsArticleId" />
    <input type="hidden" name="CreatedBy" class="form-control" value="@Model.CreatedBy" required />
    <input type="hidden" name="CreatedDate" class="form-control" value="@Model.CreatedDate" required />
    <div class="form-group">
        <label for="NewsTitle">Title</label>
        <input type="text" id="NewsTitle" name="NewsTitle" class="form-control" value="@Model.NewsTitle" required />
    </div>
    <div class="form-group">
        <label for="Headline">Headline</label>
        <input type="text" id="Headline" name="Headline" class="form-control" value="@Model.Headline" required />
    </div>
    <div class="form-group">
        <label for="NewsSource">NewsSource</label>
        <textarea id="NewsSource" name="NewsSource" class="form-control" required>@Model.NewsSource</textarea>
    </div>

    <div class="form-group">
        <label for="NewsContent">NewsContent</label>
        <textarea id="NewsContent" name="NewsContent" class="form-control" required>@Model.NewsContent</textarea>
    </div>

    <div class="form-group">
        <label for="CategoryId">Danh mục</label>
        <select id="CategoryId" name="CategoryId" class="form-control" required>
            @foreach (var category in ViewBag.Categories as List<Category>)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>